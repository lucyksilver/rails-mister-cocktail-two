<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h1>Add a dose</h1>

      <%= simple_form_for [@cocktail, @dose] do |f| %>
        <%= f.association :ingredient %>
        <%= f.input :description %>
        <%= f.button :submit, class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
